<!DOCTYPE html>
<?php
	include_once 'connection.php';
	
	if(isset($_POST['btnSubmit']))
	{
		$str="select * from admin_tbl where admin_email='".$_POST['email']."' and admin_password='".$_POST['pass']."'";
        $res=mysqli_query($conn,$str);
        $cnt=mysqli_num_rows($res);
		$data=mysqli_fetch_array($res);
		if($cnt > 0)
		{
			$_SESSION["id"]=$data['admin_id'];
			$_SESSION["name"]=$data['admin_name'];
			$_SESSION["profile"]=$data['admin_profile'];
			$_SESSION["Email"]=$data['admin_email'];
			if(isset($_POST['check']))
			{	
				setcookie("admin_email",$_POST['email'],time()+(60*2));
				setcookie("admin_pass",$_POST['pass'],time()+(60*2));
			}		 
			else
			{
				if(isset($_COOKIE["admin_email"]))
				{
					setcookie("admin_email","");
				}
				if(isset($_COOKIE["admin_pass"]))
				{
					setcookie("admin_pass","");
				} 
			}
			header('location:dashboard.php');
		}
		else
		{
			$warning="<span style='color:red;font-size: 20px;'>Incorrect Email or Password!!</span>";
		}	
	}
