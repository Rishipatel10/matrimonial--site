<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Firecracker Celebration</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            text-align: center;
            overflow: hidden;
        }

        .container {
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        button {
            padding: 15px 30px;
            font-size: 18px;
            cursor: pointer;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            transition: background-color 0.3s;
            margin: 10px;
        }

        button:hover {
            background-color: #2980b9;
        }

        /* Firework Animation */
        .firework {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 10px;
            height: 10px;
            background-color: #ff6347;
            border-radius: 50%;
            opacity: 1;
            animation: fireworkExplosion 1.5s forwards;
        }

        /* Animation for firecracker explosion */
        @keyframes fireworkExplosion {
            0% {
                transform: scale(1) translate(-50%, -50%);
                opacity: 1;
            }
            100% {
                transform: scale(3) translate(-50%, -50%) rotate(360deg);
                opacity: 0;
            }
        }

        /* Confetti and particle animation */
        .confetti {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 6px;
            height: 6px;
            background-color: #ff6347;
            border-radius: 50%;
            animation: confettiAnimation 1.5s infinite ease-in-out;
            transform-origin: center;
        }

        @keyframes confettiAnimation {
            0% {
                transform: translate(-50%, -50%) rotate(0deg) scale(1);
                opacity: 1;
            }
            50% {
                transform: translate(-50%, -50%) rotate(180deg) scale(1.5);
                opacity: 0.6;
            }
            100% {
                transform: translate(-50%, -50%) rotate(360deg) scale(1);
                opacity: 1;
            }
        }

        /* Firecracker Effect */
        .firecracker {
            position: absolute;
            width: 5px;
            height: 5px;
            background-color: #f39c12;
            border-radius: 50%;
            opacity: 1;
            animation: firecrackerBurst 1s forwards;
        }

        @keyframes firecrackerBurst {
            0% {
                transform: scale(1) translate(-50%, -50%);
                opacity: 1;
            }
            50% {
                transform: scale(2) translate(-50%, -50%) rotate(180deg);
                opacity: 0.8;
            }
            100% {
                transform: scale(3) translate(-50%, -50%) rotate(360deg);
                opacity: 0;
            }
        }

        .celebration {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .celebration.active .confetti {
            animation: confettiAnimation 2s infinite ease-in-out;
        }

        .celebration.active .firework {
            animation: fireworkExplosion 2s forwards;
        }

        .celebration.active .firecracker {
            animation: firecrackerBurst 2s forwards;
        }
    </style>
</head>
<body>
    <div class="container">
        <button id="maleToFemaleRequest">Send Male to Female Request</button>
        <button id="femaleToMaleRequest">Send Female to Male Request</button>
        <div id="celebrationContainer" class="celebration"></div>
    </div>

    <script>
        // Function to create firework effect
        function createFirework() {
            const firework = document.createElement('div');
            firework.classList.add('firework');
            firework.style.top = Math.random() * 100 + 'vh';
            firework.style.left = Math.random() * 100 + 'vw';
            document.getElementById('celebrationContainer').appendChild(firework);

            // Remove firework after animation completes
            setTimeout(() => {
                firework.remove();
            }, 1500);
        }

        // Function to create confetti
        function createConfetti() {
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.style.top = Math.random() * 100 + 'vh';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.animationDuration = (Math.random() * 1 + 1) + 's';
                confetti.style.animationDelay = (Math.random() * 2) + 's';
                document.getElementById('celebrationContainer').appendChild(confetti);

                // Remove confetti after animation
                setTimeout(() => {
                    confetti.remove();
                }, 2000);
            }
        }

        // Function to create firecracker effect
        function createFirecracker() {
            for (let i = 0; i < 10; i++) {
                const firecracker = document.createElement('div');
                firecracker.classList.add('firecracker');
                firecracker.style.top = Math.random() * 100 + 'vh';
                firecracker.style.left = Math.random() * 100 + 'vw';
                document.getElementById('celebrationContainer').appendChild(firecracker);

                // Remove firecracker after animation
                setTimeout(() => {
                    firecracker.remove();
                }, 1000);
            }
        }

        // Event listeners for buttons
        document.getElementById('maleToFemaleRequest').addEventListener('click', function() {
            // Trigger firework, confetti, and firecracker effects
            createFirework();
            createConfetti();
            createFirecracker();

            // Display confirmation message
            alert("Male to Female request sent!");
        });

        document.getElementById('femaleToMaleRequest').addEventListener('click', function() {
            // Trigger firework, confetti, and firecracker effects
            createFirework();
            createConfetti();
            createFirecracker();

            // Display confirmation message
            alert("Female to Male request sent!");
        });
    </script>
</body>
</html>
