	include_once 'connection.php';
	if(!isset($_SESSION["Email"]))
	{
		header('location:index.php');
	}
	
	$nm=$pic=$contact=$ct=$error="";
	if(isset($_SESSION["name"]))
	{
		$sel="select * from admin_tbl where admin_email='".$_SESSION["Email"]."'";
		$result=mysqli_query($conn,$sel);
		$data=mysqli_fetch_array($result);
		$nm=$data['admin_name'];
		$contact=$data['admin_contact'];
		$pic=$data['admin_profile'];
		$ct=$data['admin_city'];
		if(isset($_POST['btnsubmit']))
		{
			if(strlen($_POST['contact']) != 10 || empty($_POST['contact']))
			{
				$error="<span style='color:red'>enter valid contact number</span>";
			}
			else
			{
				if(empty($_FILES['newprofile']['name']))
				{
					$img=$_POST['oldprofile'];
				}
				else
				{
					unlink("admin_profiles/".$_POST['oldprofile']);
					move_uploaded_file($_FILES['newprofile']['tmp_name'],"admin_profiles/".$_FILES['newprofile']['name']);
					$img=$_FILES['newprofile']['name'];
					
				}
				
				/* print_r($_FILES);
				die; */
				$str="update admin_tbl set admin_name='".$_POST['admin_name']."' , admin_contact='".$_POST['contact']."',admin_city='".$_POST['city']."',admin_profile='".$img."' where admin_email='".$_SESSION["Email"]."'";
				$success=mysqli_query($conn,$str);
				if(isset($success))
				{
					header('location:dashboard.php');
					
				}
			}
		}
		
		if(isset($_POST['btndelete']))
		{
			unlink("admin_profiles/".$data['admin_profile']);
			$del="delete from admin_tbl where admin_email='".$_SESSION["Email"]."'";
			mysqli_query($conn,$del);
		}
	}
	else
	{
		header('location:admin_login.php');
	}
